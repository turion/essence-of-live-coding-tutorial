build-type:          Simple
extra-source-files:  CHANGELOG.md
extra-doc-files:     README.md

tested-with: GHC == 8.6.5, GHC == 8.8.4

flag pulse
  description: Build with pulse audio backend on linux.

source-repository head
  type:     git
  location: git@github.com:turion/essence-of-live-coding-tutorial.git

source-repository this
  type:     git
  location: git@github.com:turion/essence-of-live-coding-tutorial.git
  tag:      v0.2.3

executable essence-of-live-coding-tutorial
  main-is:             Main.hs
  build-depends:
      base >= 4.12 && < 4.14
    , gloss >= 1.13
    , vector-space >= 0.16
    , bytestring >= 0.10
    , utf8-string >= 1.0.1
    , essence-of-live-coding >= 0.2.3
    , essence-of-live-coding-gloss >= 0.2.3
    , essence-of-live-coding-warp >= 0.2.3

  if os(linux) && flag(pulse)
    build-depends:
      essence-of-live-coding-pulse >= 0.2.3

  default-language:    Haskell2010
